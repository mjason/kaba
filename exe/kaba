#!/usr/bin/env ruby
require "bundler/setup"

require 'json'
require 'dotenv'
Dotenv.load

require "kaba"

if ARGV[0] == 'test'
  # 运行测试程序
  load DatasetSource.testfile
elsif ARGV[0] == 'version'
  # 显示版本号
  puts Kaba::VERSION
else
  # 运行 DPodfile 文件，DPodfile 是一个 Ruby 文件
  load DatasetSource.podfile
end